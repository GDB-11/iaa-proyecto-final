package proyectofinal;

import javax.swing.JDialog;
import javax.swing.JScrollPane;
import javax.swing.JButton;
import javax.swing.JTextArea;

import application.core.interfaces.IOperacionesCocina;
import infrastructure.core.models.Cocina;
import proyectofinal.helpers.ElementosHelper;

import java.awt.event.ActionListener;
import java.util.List;
import java.awt.event.ActionEvent;

public class ListarCocinasDialog extends JDialog {

	private static final long serialVersionUID = 1L;

	/**
	 * Create the dialog.
	 */
	public ListarCocinasDialog(IOperacionesCocina operacionesCocina) {
		setBounds(100, 100, 450, 333);
		getContentPane().setLayout(null);
		
		JScrollPane scrollPane = new JScrollPane();
		scrollPane.setBounds(10, 11, 414, 203);
		getContentPane().add(scrollPane);
		
		JTextArea textArea = new JTextArea();
		scrollPane.setViewportView(textArea);
		
		JButton btnCerrar = new JButton("Cerrar");
		btnCerrar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				dispose();
			}
		});
		btnCerrar.setBounds(259, 247, 89, 23);
		getContentPane().add(btnCerrar);
		
		JButton btnListar = new JButton("Listar");
		btnListar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				ElementosHelper.setTextAreaNewValue(textArea, "");
				ElementosHelper.printTextAreaNewLine(textArea, "LISTADO DE COCINAS \n" );
				
				List<Cocina> cocinas = operacionesCocina.listarCocinas();
				
				for (Integer i=1; i <= cocinas.size(); i++) {
					
					System.out.println(i);
					Cocina cocina = cocinas.get(i);
					ElementosHelper.printTextAreaNewLine(textArea, "Modelo: " + cocina.getModelo() + "\n" );
					ElementosHelper.printTextAreaNewLine(textArea, "Precio: " + cocina.getPrecio() + "\n" );
					ElementosHelper.printTextAreaNewLine(textArea, "Profundidad: " + cocina.getFondo() + "\n" );
					ElementosHelper.printTextAreaNewLine(textArea, "Alto: " + cocina.getAlto() + "\n" );
					ElementosHelper.printTextAreaNewLine(textArea, "Ancho: " + cocina.getAncho() + "\n" );
					ElementosHelper.printTextAreaNewLine(textArea, "Quemadores: " + cocina.getQuemadores() + "\n" );
				}
			}
		});
		btnListar.setBounds(85, 247, 89, 23);
		getContentPane().add(btnListar);

	}
}
